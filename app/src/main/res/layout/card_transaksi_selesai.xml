<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header dengan nomor dan nama -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/txtNomor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[1]"
                android:textColor="#2196F3"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/txtNama"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nama Pelanggan"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELESAI"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/button_gradient_background"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Tanggal -->
        <TextView
            android:id="@+id/txtTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-01-01 10:00:00"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginBottom="8dp" />

        <!-- Layanan -->
        <TextView
            android:id="@+id/txtLayanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuci Kering"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <!-- Layanan Tambahan -->
        <TextView
            android:id="@+id/txtTambahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2 Layanan Tambahan"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- Layout Pengambilan -->
        <LinearLayout
            android:id="@+id/layoutPengambilan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E3F2FD"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diambil: "
                android:textColor="#1976D2"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTanggalPengambilan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2024-01-01 15:00:00"
                android:textColor="#1976D2"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Total -->
        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 50.000"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="end" />

    </LinearLayout>

</androidx.cardview.widget.CardView>