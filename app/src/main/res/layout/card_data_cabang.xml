<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <!-- Card Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBranch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_gradient_background">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Store Icon -->
                <ImageView
                    android:id="@+id/ivStoreIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/badge_background"
                    android:padding="12dp"
                    android:src="@drawable/ic_business"
                    android:contentDescription="Store Icon"
                    android:scaleType="centerInside" />

                <!-- Store Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Store Name -->
                    <TextView
                        android:id="@+id/tvStoreName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SuperMart Indonesia"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                         />

                    <!-- Branch Name -->
                    <TextView
                        android:id="@+id/tvBranchName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cabang Kelapa Gading"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp"
                         />

                </LinearLayout>

                <!-- Status Badge -->
                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BUKA"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/status_badge_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginHorizontal="20dp" />

            <!-- Contact Information Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_access_time"
                        app:tint="#666666"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/tvOperationalHours"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        tools:text="Setiap Hari â€¢ 08:00 - 22:00" />

                </LinearLayout>

                <!-- Address Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/ic_location_on"
                        android:contentDescription="Location Icon"
                        app:tint="#FF6B35" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alamat"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#999999"
                            android:textAllCaps="true"
                            android:letterSpacing="0.1" />

                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jl. Boulevard Raya No. 45, Kelapa Gading Timur, Jakarta Utara 14240"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp"
                            android:lineSpacingExtra="2dp"
                            />

                    </LinearLayout>

                </LinearLayout>

                <!-- Phone Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_phone"
                        android:contentDescription="Phone Icon"
                        app:tint="#FF6B35" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Telepon"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#999999"
                            android:textAllCaps="true"
                            android:letterSpacing="0.1" />

                        <TextView
                            android:id="@+id/tvPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(021) 4585-7890"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp"
                            android:textIsSelectable="true" />

                    </LinearLayout>

                    <!-- Call Button -->
                    <ImageButton
                        android:id="@+id/btnCall"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/call_button_background"
                        android:src="@drawable/ic_call"
                        android:contentDescription="Call Button"
                        android:scaleType="centerInside"
                        app:tint="#FFFFFF" />

                </LinearLayout>

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingBottom="20dp"
                android:gravity="end">

                <!-- Directions Button -->
                <Button
                    android:id="@+id/btnDirections"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="PETUNJUK ARAH"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FF6B35"
                    app:strokeColor="#FF6B35"
                    app:strokeWidth="1dp"
                    app:cornerRadius="18dp"
                    android:paddingHorizontal="16dp"
                    android:drawableLeft="@drawable/ic_directions"
                    android:drawablePadding="8dp"
                    app:drawableTint="#FF6B35" />

                <!-- Edit Button -->
                <Button
                    android:id="@+id/btnEdit"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:text=""
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FF6B35"
                    app:strokeColor="#FF6B35"
                    app:strokeWidth="1dp"
                    android:layout_weight="1"
                    app:cornerRadius="18dp"
                    android:paddingHorizontal="16dp"
                    android:drawableLeft="@drawable/ic_edit"
                    android:drawablePadding="8dp"
                    app:drawableTint="#FF6B35" />

                <!-- Delete Button -->
                <Button
                    android:id="@+id/btnDelete"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text=""
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:backgroundTint="#F44336"
                    app:cornerRadius="18dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="16dp"
                    android:drawableLeft="@drawable/ic_delete"
                    android:drawablePadding="8dp"
                    app:drawableTint="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>