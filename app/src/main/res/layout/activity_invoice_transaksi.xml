<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Athh Laundry"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manahan"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="#777777"
            android:layout_marginBottom="16dp" />

        <!-- Informasi Transaksi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="ID Transaksi"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#000" />
                <TextView
                    android:id="@+id/tvIdTransaksi"
                    android:text="#IDTRANS01"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#555" />

                <TextView
                    android:text="Tanggal"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#000"
                    android:layout_marginTop="8dp" />
                <TextView
                    android:id="@+id/tvTanggal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="2025-05-18 00:00:00"
                    android:textColor="#555" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="Pesanan"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000" />
                <TextView
                    android:id="@+id/tvNamaPelanggan"
                    android:text="Athaya"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#555" />

                <TextView
                    android:text="Karyawan"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginTop="8dp" />
                <TextView
                    android:id="@+id/tvNamaKaryawan"
                    android:text="Rudi"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#555" />
            </LinearLayout>
        </LinearLayout>

        <!-- Layanan Utama -->
        <TextView
            android:id="@+id/tvLayananUtama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuci Setrika 5kg"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvHargaLayanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp0"
            android:gravity="end"
            android:textColor="#000"
            android:textSize="16sp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Rincian Tambahan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rincian Tambahan"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRincianTambahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        </ScrollView>

        <!-- Subtotal Tambahan -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subtotal Tambahan"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvSubtotalTambahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp0"
            android:gravity="end"
            android:textColor="#000"
            android:textSize="16sp" />

        <!-- Total Bayar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Bayar"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#222" />

            <TextView
                android:id="@+id/tvTotalBayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp0"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000" />
        </LinearLayout>

        <!-- Tombol Aksi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnKirimWhatsapp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kirim WhatsApp"
                android:backgroundTint="#4CAF50"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnCetak"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cetak"
                android:backgroundTint="#2196F3"

                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
