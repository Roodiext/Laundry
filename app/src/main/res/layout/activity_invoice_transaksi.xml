<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Laundry SukaMakmur"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="#2C3E50"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvCabangInvoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manahan"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="#7F8C8D"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvAlamatCabang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textColor="#95A5A6"
                    android:layout_marginBottom="8dp" />

                <!-- Status Badge -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INVOICE"
                    android:background="@drawable/status_badge_background"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="6dp"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Transaction Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detail Transaksi"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:text="ID Transaksi"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="#34495E"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tvIdTransaksi"
                            android:text="#IDTRANS01"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="#3498DB"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:text="Tanggal"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="#34495E"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tvTanggal"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="2025-05-18 00:00:00"
                            android:textColor="#7F8C8D"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:text="Pelanggan"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:textColor="#34495E"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tvNamaPelanggan"
                            android:text="Athaya"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="#2C3E50"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:text="Karyawan"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:textColor="#34495E"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tvNamaKaryawan"
                            android:text="Rudi"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="#7F8C8D"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Main Service Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Layanan Utama"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvLayananUtama"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cuci Setrika 5kg"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#2C3E50" />

                    <TextView
                        android:id="@+id/tvHargaLayanan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp0"
                        android:textColor="#27AE60"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Additional Services Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rincian Tambahan"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="12dp" />

                <!-- Subtotal Section with Divider -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRincianTambahan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E8E8E8"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Subtotal Tambahan"
                        android:textStyle="bold"
                        android:textColor="#34495E"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvSubtotalTambahan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp0"
                        android:textColor="#27AE60"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Total Card with Gradient Background -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/button_gradient_background"
                android:padding="24dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Bayar"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tvTotalBayar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp0"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="4dp">

                <Button
                    android:id="@+id/btnKirimWhatsapp"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ“±Kirim WhatsApp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:background="@color/colorFirst"
                    android:elevation="0dp"
                    android:stateListAnimator="@null" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="4dp">

                <Button
                    android:id="@+id/btnCetak"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ–¨ï¸ Cetak"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:background="@color/colorFirst"
                    android:elevation="0dp"
                    android:stateListAnimator="@null" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terima kasih telah menggunakan layanan Laundry SukaMakmur ðŸ’™"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="#7F8C8D"
            android:textStyle="italic"
            android:layout_marginTop="24dp"
            android:padding="16dp" />

    </LinearLayout>
</ScrollView>