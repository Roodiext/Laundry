<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kalkulatorActivit"
    android:background="@drawable/bgblck">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalkulator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100px"
        android:textStyle="bold"
        android:textSize="100px"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/hasil"
        android:layout_width="1000px"
        android:layout_height="500px"
        android:text="-"
        android:layout_marginTop="50px"
        android:padding="20px"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:textSize="72sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/judul"
        />

    <Button
        android:id="@+id/buttonpersen"
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:background="@drawable/button_shape"
        android:layout_marginTop="35dp"
        android:text="%"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.331"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hasil" />

    <Button
        android:id="@+id/button8"
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:background="@drawable/button_shape"
        android:text="8"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.331"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonpersen" />

    <Button
        android:id="@+id/button5"
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:background="@drawable/button_shape"
        android:text="5"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.331"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button8" />

    <Button
        android:id="@+id/button2"
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:background="@drawable/button_shape"
        android:text="2"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.331"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button5" />

    <Button
        android:id="@+id/button0"
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:background="@drawable/button_shape"
        android:text="0"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.331"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button2" />

    <Button
        android:id="@+id/buttonc"
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_shape"
        android:text="C"
        android:textSize="40dp"
        app:layout_constraintEnd_toStartOf="@id/buttonpersen"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hasil" />

    <Button
        android:id="@+id/button7"
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:background="@drawable/button_shape"
        android:text="7"
        android:textSize="40dp"
        app:layout_constraintEnd_toStartOf="@id/buttonpersen"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonc" />

    <Button
        android:id="@+id/button4"
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:background="@drawable/button_shape"
        android:text="4"
        android:textSize="40dp"
        app:layout_constraintEnd_toStartOf="@id/buttonpersen"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button7" />

    <Button
        android:id="@+id/button1"
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:background="@drawable/button_shape"
        android:text="1"
        android:textSize="40dp"
        app:layout_constraintEnd_toStartOf="@id/buttonpersen"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button4" />

    <Button
        android:id="@+id/button00"
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:background="@drawable/button_shape"
        android:text="00"
        android:textSize="40dp"
        app:layout_constraintEnd_toStartOf="@id/buttonpersen"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button1" />

    <Button
        android:id="@+id/buttonhps"
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:background="@drawable/button_shape"
        android:layout_marginTop="35dp"
        android:text="โซ"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@id/buttonpersen"
        app:layout_constraintTop_toBottomOf="@id/hasil" />

    <Button
        android:id="@+id/button9"
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:background="@drawable/button_shape"
        android:text="9"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@id/buttonpersen"
        app:layout_constraintTop_toBottomOf="@id/buttonhps" />

    <Button
        android:id="@+id/button6"
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:background="@drawable/button_shape"
        android:text="6"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@id/buttonpersen"
        app:layout_constraintTop_toBottomOf="@id/button9" />

    <Button
        android:id="@+id/button3"
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:background="@drawable/button_shape"
        android:text="3"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@id/buttonpersen"
        app:layout_constraintTop_toBottomOf="@id/button6" />

    <Button
        android:id="@+id/buttonkoma"
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:background="@drawable/button_shape"
        android:text=","
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@id/buttonpersen"
        app:layout_constraintTop_toBottomOf="@id/button3" />

    <Button
        android:id="@+id/buttonbagi"
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:background="@drawable/button_shape"
        android:layout_marginTop="35dp"
        android:text="รท"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@id/buttonhps"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toBottomOf="@id/hasil" />

    <Button
        android:id="@+id/buttonkali"
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:background="@drawable/button_shape"
        android:text="x"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@id/buttonhps"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toBottomOf="@id/buttonbagi" />

    <Button
        android:id="@+id/buttonkurang"
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:background="@drawable/button_shape"
        android:text="-"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@id/buttonhps"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toBottomOf="@id/buttonkali" />

    <Button
        android:id="@+id/buttontambah"
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:background="@drawable/button_shape"
        android:text="+"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@id/buttonhps"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toBottomOf="@id/buttonkurang" />

    <Button
        android:id="@+id/buttonsama"
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:background="@drawable/button_shape"
        android:text="="
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@id/buttonhps"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toBottomOf="@id/buttontambah" />


</androidx.constraintlayout.widget.ConstraintLayout>