<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="20dp"
    android:layout_marginEnd="20dp"
    app:cardCornerRadius="30dp"
    android:layout_marginTop="600dp"
    android:cardBackgroundColor="#F5F5F5"> <!-- Pastikan warna latar belakang CardView tidak putih -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@android:color/white"> <!-- Tambahkan background putih untuk memastikan -->

        <!-- Header Profil Saya -->
        <TextView
            android:id="@+id/tvProfil1"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#C80D0D"
        android:padding="15dp"
        android:paddingStart="20dp"
        android:textColor="@android:color/white"
        android:paddingEnd="300dp"
        android:text="Profil Saya"
        android:textSize="20sp" />

        <!-- NIS -->
        <TextView
            android:id="@+id/alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProfil1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Alamat"
            android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

        <!-- NISN -->
        <TextView
            android:id="@+id/kelamin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/alamat"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp" />

        <!-- Kelas -->
        <TextView
            android:id="@+id/hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No.HP"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/kelamin"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp" />

        <!-- Jurusan -->
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/hp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp" />

        <!-- Status -->
        <TextView
            android:id="@+id/tempat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempat Lahir"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/email"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp" />

        <!-- Tahun Masuk -->
        <TextView
            android:id="@+id/tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Lahir"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/tempat"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp" />

        <!-- Tahun Lulus -->
        <TextView
            android:id="@+id/agama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agama"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/tanggal"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/satu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manahan"
            android:layout_marginStart="250dp"
            android:layout_alignTop="@id/alamat"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/dua2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laki-Laki"
            android:layout_marginStart="250dp"
            android:layout_below="@id/satu1"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tiga3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="089510514233"
            android:layout_marginStart="250dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/dua2"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/empat4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roodiext@gmail.com"
            android:layout_marginStart="250dp"
            android:layout_below="@id/tiga3"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/lima5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surakarta"
            android:layout_marginTop="12dp"
            android:layout_marginStart="250dp"
            android:layout_below="@id/empat4"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/enam6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09-06-2008"
            android:layout_marginTop="12dp"
            android:layout_marginStart="250dp"
            android:layout_below="@id/lima5"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tujuh7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Islam"
            android:layout_marginTop="12dp"
            android:layout_marginStart="250dp"
            android:layout_below="@id/enam6"
            android:textAlignment="textStart"
            android:textColor="@android:color/black" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>


